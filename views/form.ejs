<div class="row">
  <div class="col-md-12">
    <form class="form-inline">
      <div class="form-group">
        <div class="input-group">
          <div class="input-group-addon">From</div>
          <input type="text" class="form-control autocomplete-airport-input" id="from" placeholder="i.e.: Sydney">
        </div>
      </div>
      <div class="form-group">
        <div class="input-group">
          <div class="input-group-addon">To</div>
          <input type="text" class="form-control autocomplete-airport-input" id="to" placeholder="i.e.: Asuncion">
        </div>
      </div>
      <div class="form-group">
        <div class='input-group date' id='dtp_when'>
          <input type='text' class="form-control datepicker-input" id="when"/>
          <span class="input-group-addon">
            <span class="glyphicon glyphicon-calendar"></span>
          </span>
        </div>
      </div>
      <button type="submit" class="btn btn-primary">
        <i class="glyphicon glyphicon-search" aria-hidden="true"></i>
        Find Flights
      </button>
    </form>
  </div>
</div>
